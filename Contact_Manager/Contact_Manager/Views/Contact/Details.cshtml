@model Contact
@{
    ViewBag.Title = "Contact Manager";
}

<h2>Contact Details</h2>


<form class="form-horizontal" method="post">

    <div class="form-group">
        <label class="control-label col-sm-2">Name</label>
        <div class="col-sm-10">
            <input type="text" asp-for="Firstname" readonly />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2">Phone</label>
        <div class="col-sm-10">
            <input type="text" asp-for="Phone" readonly />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2">Email</label>
        <div class="col-sm-10">
            <input type="text" asp-for="Email" readonly />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2">Category</label>
        <div class="col-sm-10">
            <input type="text" asp-for="Category.Name" readonly />
        </div>
    </div>

        <div class="form-group">
            <label class="control-label col-sm-2">Organization</label>
            <div class="col-sm-10">
                <input type="text" asp-for="Organization" readonly />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2">Date Added</label>
            <div class="col-sm-10">
                <input type="text" asp-for="DateAdded" readonly />
            </div>
         </div>

            <input type="hidden" asp-for="ContactId" readonly />


</form>
